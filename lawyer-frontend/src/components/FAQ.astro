// FAQ bileşeni
const faqs = [
  {
    id: 1,
    question: "Hukuki danışmanlık ücretleri nasıl belirleniyor?",
    answer: "Hukuki danışmanlık ücretleri, davanın karmaşıklığı, süresi ve avukatın deneyimine göre değişmektedir. İlk görüşmede ücretsiz ön değerlendirme yapıyoruz ve size uygun fiyat teklifi sunuyoruz."
  },
  {
    id: 2,
    question: "Uzaktan danışmanlık hizmeti veriyor musunuz?",
    answer: "Evet, telefon ve video görüşme ile uzaktan danışmanlık hizmeti veriyoruz. Özellikle pandemi döneminde bu hizmetimiz oldukça tercih edilmektedir."
  },
  {
    id: 3,
    question: "Hangi hukuk alanlarında uzmanlaşmışsınız?",
    answer: "Ticaret hukuku, iş hukuku, gayrimenkul hukuku, ceza hukuku, aile hukuku ve icra-iflas hukuku alanlarında uzmanlaşmış bulunmaktayız."
  },
  {
    id: 4,
    question: "Dava süreci ne kadar sürer?",
    answer: "Dava süreci, davanın türüne ve karmaşıklığına göre değişmektedir. Basit davalar birkaç ay sürerken, karmaşık davalar yıllar alabilir. Size dava başlangıcında tahmini süre hakkında bilgi veriyoruz."
  },
  {
    id: 5,
    question: "Acil durumlarda 7/24 hizmet veriyor musunuz?",
    answer: "Acil durumlar için telefon hattımız açıktır. Özellikle ceza davaları ve acil hukuki müdahale gerektiren durumlar için 7/24 ulaşabilirsiniz."
  }
];
---

<section id="faq" class="py-20 bg-dark">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-serif font-bold text-secondary mb-6">
          Sık Sorulan <span class="text-primary">Sorular</span>
        </h2>
        <p class="text-lg text-secondary/80 max-w-3xl mx-auto">
          Müvekkillerimizin en çok merak ettiği soruları ve cevaplarını burada bulabilirsiniz.
        </p>
      </div>

      <!-- FAQ Accordion -->
      <div class="space-y-4">
        {faqs.map((faq) => (
          <div class="faq-item bg-dark-light/50 backdrop-blur-sm border border-primary/20 rounded-xl overflow-hidden">
            <button 
              class="faq-question w-full px-6 py-4 text-left flex items-center justify-between hover:bg-dark-light/70 transition-all duration-300"
              data-faq-id={faq.id}
            >
              <h3 class="text-lg font-semibold text-secondary pr-4">
                {faq.question}
              </h3>
              <svg class="faq-icon w-6 h-6 text-primary flex-shrink-0 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-answer hidden px-6 pb-4">
              <p class="text-secondary/70 leading-relaxed">
                {faq.answer}
              </p>
            </div>
          </div>
        ))}
      </div>

      <!-- Contact CTA -->
      <div class="text-center mt-12">
        <div class="bg-gradient-to-r from-primary/10 to-primary-light/10 border border-primary/30 rounded-2xl p-8">
          <h3 class="text-2xl font-serif font-semibold text-secondary mb-4">
            Başka Sorularınız mı Var?
          </h3>
          <p class="text-secondary/80 mb-6">
            Burada bulamadığınız sorularınız için bizimle iletişime geçebilirsiniz.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="#contact" 
              class="bg-gradient-to-r from-primary to-primary-light hover:from-primary-light hover:to-primary text-dark font-bold px-8 py-3 rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-primary/25 transform hover:scale-105"
            >
              İletişime Geçin
            </a>
            <a 
              href="tel:03129550550" 
              class="border-2 border-primary text-primary hover:bg-primary hover:text-dark font-semibold px-8 py-3 rounded-lg transition-all duration-300"
            >
              Hemen Ara
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // FAQ Accordion functionality
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');
      
      question?.addEventListener('click', () => {
        const isOpen = answer?.classList.contains('hidden');
        
        // Close all other FAQ items
        faqItems.forEach(otherItem => {
          const otherAnswer = otherItem.querySelector('.faq-answer');
          const otherIcon = otherItem.querySelector('.faq-icon');
          
          if (otherItem !== item) {
            otherAnswer?.classList.add('hidden');
            otherIcon?.classList.remove('rotate-180');
          }
        });
        
        // Toggle current item
        if (isOpen) {
          answer?.classList.remove('hidden');
          icon?.classList.add('rotate-180');
        } else {
          answer?.classList.add('hidden');
          icon?.classList.remove('rotate-180');
        }
      });
    });
  });
</script>

<style>
  .faq-item {
    transition: all 0.3s ease;
  }
  
  .faq-item:hover {
    border-color: rgba(212, 175, 55, 0.4);
  }
  
  .faq-question:focus {
    outline: none;
  }
  
  .faq-answer {
    transition: all 0.3s ease;
  }
</style> 