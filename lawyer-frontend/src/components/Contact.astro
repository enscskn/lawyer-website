    </div>
  </div>
</section>

<script>


  // OpenStreetMap ile harita yükle
  function loadMap() {
    const mapContainer = document.getElementById('map');
    if (!mapContainer) return;

    // Ankara, Paragon Tower koordinatları
    const lat = 39.9334;
    const lng = 32.8597;
    const zoom = 15;

    // OpenStreetMap iframe oluştur
    const iframe = document.createElement('iframe');
    iframe.src = `https://www.openstreetmap.org/export/embed.html?bbox=${lng-0.01},${lat-0.01},${lng+0.01},${lat+0.01}&layer=mapnik&marker=${lat},${lng}`;
    iframe.width = '100%';
    iframe.height = '100%';
    iframe.style.border = 'none';
    iframe.style.borderRadius = '0 0 12px 12px';
    iframe.title = 'Kasım Aksoy Hukuk & Danışmanlık Konumu';
    iframe.loading = 'lazy';

    // Marker overlay ekle
    const markerOverlay = document.createElement('div');
    markerOverlay.className = 'absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10';
    markerOverlay.innerHTML = `
      <div class="bg-primary text-dark px-3 py-1 rounded-lg shadow-lg font-semibold text-sm whitespace-nowrap">
        📍 Kasım Aksoy Hukuk & Danışmanlık
      </div>
      <div class="w-4 h-4 bg-primary rounded-full border-2 border-white shadow-lg mx-auto mt-1"></div>
    `;

    // Container'ı temizle ve yeni içerik ekle
    mapContainer.innerHTML = '';
    mapContainer.appendChild(iframe);
    mapContainer.appendChild(markerOverlay);

    // Harita yüklendiğinde marker'ı göster
    iframe.onload = () => {
      markerOverlay.style.opacity = '1';
    };
  }

  // Form validation and submission
  const contactForm = document.getElementById('contact-form');
  
  contactForm?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Basic form validation
    const formData = new FormData(this as HTMLFormElement);
    const name = formData.get('name');
    const phone = formData.get('phone');
    const email = formData.get('email');
    const subject = formData.get('subject');
    const message = formData.get('message');
    const privacy = formData.get('privacy');
    
    if (!name || !phone || !email || !subject || !message || !privacy) {
      alert('Lütfen tüm zorunlu alanları doldurun.');
      return;
    }
    
    // Email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email as string)) {
      alert('Lütfen geçerli bir e-posta adresi girin.');
      return;
    }
    
    // Phone validation
    const phoneRegex = /^0\s?\(?[0-9]{3}\)?\s?[0-9]{3}\s?[0-9]{2}\s?[0-9]{2}$/;
    if (!phoneRegex.test(phone as string)) {
      alert('Lütfen geçerli bir telefon numarası girin.');
      return;
    }
    
    // Here you would typically send the form data to your backend
    // For now, we'll just show a success message
    alert('Mesajınız başarıyla gönderildi! En kısa sürede size dönüş yapacağız.');
    (this as HTMLFormElement).reset();
  });
  
  // Phone number formatting
  const phoneInput = document.getElementById('phone');
  phoneInput?.addEventListener('input', function(e) {
    let value = (e.target as HTMLInputElement).value.replace(/\D/g, '');
    if (value.length > 0) {
      value = '0 (' + value.substring(1, 4) + ') ' + value.substring(4, 7) + ' ' + value.substring(7, 9) + ' ' + value.substring(9, 11);
    }
    (e.target as HTMLInputElement).value = value;
  });

  // Haritayı yükle
  document.addEventListener('DOMContentLoaded', () => {
    loadMap();
  });
</script> 