<script>
  // Hero slider fonksiyonalitesi
  let heroCurrentIndex = 0;
  const heroTotalSlides = 3;
  let heroAutoPlayTimer: NodeJS.Timeout;

  // DOM elementlerini seç
  const heroSlides = document.querySelectorAll('[id^="hero-slide-"]');
  const heroDots = document.querySelectorAll('.hero-dot-btn');
  const heroPrevBtn = document.getElementById('hero-prev-btn');
  const heroNextBtn = document.getElementById('hero-next-btn');

  // Slide'ları güncelle
  function updateHeroSlides() {
    heroSlides.forEach((slide, index) => {
      if (index === heroCurrentIndex) {
        slide.classList.remove('opacity-0');
        slide.classList.add('opacity-100');
      } else {
        slide.classList.remove('opacity-100');
        slide.classList.add('opacity-0');
      }
    });

    // Dots'ları güncelle
    heroDots.forEach((dot, index) => {
      if (index === heroCurrentIndex) {
        dot.classList.add('bg-primary', 'scale-125');
        dot.classList.remove('bg-secondary/40');
      } else {
        dot.classList.remove('bg-primary', 'scale-125');
        dot.classList.add('bg-secondary/40');
      }
    });
  }

  // Sonraki slide'a geç
  function heroNextSlide() {
    heroCurrentIndex = (heroCurrentIndex + 1) % heroTotalSlides;
    updateHeroSlides();
  }

  // Önceki slide'a geç
  function heroPrevSlide() {
    heroCurrentIndex = (heroCurrentIndex - 1 + heroTotalSlides) % heroTotalSlides;
    updateHeroSlides();
  }

  // Belirli bir slide'a geç
  function heroGoToSlide(index: number) {
    heroCurrentIndex = index;
    updateHeroSlides();
  }

  // Otomatik oynatma
  function startHeroAutoPlay() {
    heroAutoPlayTimer = setInterval(heroNextSlide, 4000);
  }

  function stopHeroAutoPlay() {
    clearInterval(heroAutoPlayTimer);
  }

  // Event listener'ları ekle
  document.addEventListener('DOMContentLoaded', () => {
    // Navigation butonları
    heroPrevBtn?.addEventListener('click', () => {
      stopHeroAutoPlay();
      heroPrevSlide();
      startHeroAutoPlay();
    });

    heroNextBtn?.addEventListener('click', () => {
      stopHeroAutoPlay();
      heroNextSlide();
      startHeroAutoPlay();
    });

    // Dot butonları
    heroDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        stopHeroAutoPlay();
        heroGoToSlide(index);
        startHeroAutoPlay();
      });
    });

    // Mouse hover'da otomatik oynatmayı durdur
    const heroSliderContainer = document.getElementById('hero-slider-container');
    heroSliderContainer?.addEventListener('mouseenter', stopHeroAutoPlay);
    heroSliderContainer?.addEventListener('mouseleave', startHeroAutoPlay);

    // Touch/swipe desteği
    let startX = 0;
    let endX = 0;

    heroSliderContainer?.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
    });

    heroSliderContainer?.addEventListener('touchend', (e) => {
      endX = e.changedTouches[0].clientX;
      const diff = startX - endX;
      
      if (Math.abs(diff) > 50) { // Minimum swipe mesafesi
        if (diff > 0) {
          // Sola swipe - sonraki slide
          stopHeroAutoPlay();
          heroNextSlide();
          startHeroAutoPlay();
        } else {
          // Sağa swipe - önceki slide
          stopHeroAutoPlay();
          heroPrevSlide();
          startHeroAutoPlay();
        }
      }
    });

    // Otomatik oynatmayı başlat
    startHeroAutoPlay();
  });
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from { 
      opacity: 0; 
      transform: translateY(30px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
  
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }
  
  .animate-slide-up {
    animation: slideUp 1s ease-out 0.3s both;
  }
  
  .animate-slide-up:nth-child(3) {
    animation-delay: 0.6s;
  }
  
  .animate-slide-up:nth-child(4) {
    animation-delay: 0.9s;
  }

  /* Hero slider smooth transitions */
  [id^="hero-slide-"] {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-dot-btn {
    cursor: pointer;
  }

  .hero-dot-btn:hover {
    transform: scale(1.2);
  }
</style> 