<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
    min-height: 100vh;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #1a1a1a;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #D4AF37;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #FFD700;
  }
  
  /* Selection color */
  ::selection {
    background: #D4AF37;
    color: #000000;
  }
  
  /* Focus styles */
  *:focus {
    outline: 2px solid #D4AF37;
    outline-offset: 2px;
  }
</style>
